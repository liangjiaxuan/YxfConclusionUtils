<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pop_layout"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </android.support.v7.widget.RecyclerView>
    <View style="@style/MyDivider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarHeight">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额:"
                android:textColor="@color/txtColor_Black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/txtColor_red"
                android:layout_gravity="center_vertical"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_pay_goldcoin_3x" />

            <Button
                android:id="@+id/bt_recharge"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_btn_submit_selector"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="获取金币"
                android:textColor="@color/txtColor_White"
                android:layout_marginLeft="15dp"
                android:textSize="14sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_question_sen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问并赠送"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/txtColor_White"
            android:textSize="14sp"
            android:background="@drawable/bg_btn_submit_selector"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>